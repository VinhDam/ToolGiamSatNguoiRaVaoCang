            <DxTreeViewNode NavigateUrl="/" Text="Dashboard" />
            <DxTreeViewNode NavigateUrl="/person" Text="Nhân viên" />
            <DxTreeViewNode Text="Danh mục" NavigateUrl="/menu" AllowSelection="true">
