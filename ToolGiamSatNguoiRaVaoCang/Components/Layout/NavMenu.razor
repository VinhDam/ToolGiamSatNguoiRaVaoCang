                    <DxTreeViewNode Text="Loại khu vực" NavigateUrl="/menu/zonetype" AllowSelection="true" CssClass="menu-item"/>
                    <DxTreeViewNode Text="Khu vực" NavigateUrl="/menu/zone" BadgeText="New" AllowSelection="true" CssClass="menu-item" />
